module LSL
  grammar Main
    include LSL::Quoting
    
    rule command
      ex (ws args)? (ws options)?
    end
    
    rule ex
      word
    end
    
    rule arg
      optionally_quoted_string
    end
    rule args
      arg (ws arg)*
    end
    
    rule option
      '-' word
    end
    rule options
      option (ws option)*
    end
  end
end